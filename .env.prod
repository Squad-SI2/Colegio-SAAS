# ---- Django / App (PROD) ----
SECRET_KEY=pon_algo_unico_y_muy_largo
DEBUG=False
DJANGO_SETTINGS_MODULE=config.settings

# Dominios reales de tu API (o IP pública)
ALLOWED_HOSTS=api.tu-dominio.com,tu-ip-publica

# CORS: orígenes del FRONTEND (los que abrirán el sitio en el navegador)
CORS_ALLOWED_ORIGINS=https://app.tu-dominio.com,https://www.tu-dominio.com
# En prod evita CORS_ALLOW_ALL_ORIGINS=True

# CSRF (Django 4+ requiere esquema)
CSRF_TRUSTED_ORIGINS=https://app.tu-dominio.com,https://www.tu-dominio.com,https://api.tu-dominio.com

LANGUAGE_CODE=es
TIME_ZONE=America/La_Paz

# ---- Base de datos ----
# Opción simple con variables sueltas (si tus settings ya las leen):
POSTGRES_DB=colegio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=cambia_esto
POSTGRES_HOST=db
POSTGRES_PORT=5432

# (Opcional) Si tu settings soporta DATABASE_URL:
# DATABASE_URL=postgres://postgres:cambia_esto@db:5432/colegio

# ---- Frontend (lo que verá el navegador) ----
VITE_API_URL=https://api.tu-dominio.com

# ---- Flags del entrypoint (producción) ----
COLLECT_STATIC=1
TENANT_MIGRATIONS=1
DB_MAX_RETRIES=30
DB_SLEEP_BETWEEN=2

# ---- Gunicorn (tuning) ----
GUNICORN_WORKERS=3
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60

# (Prod) Evita dejar en fijo las credenciales del superusuario:
# CREATE_SUPERUSER=1
# DJANGO_SUPERUSER_EMAIL=admin@plataforma.com
# DJANGO_SUPERUSER_PASSWORD=Solo_para_el_primer_arranque_luego_borrar
